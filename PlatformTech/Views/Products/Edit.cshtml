@model PlatformTech.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<style>
    body {
        background-image: url('/images/sar3.jpg'); /* Replace with your image path */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        margin: 0; /* Ensures no default margin around the body */
        padding: 0; /* Removes default padding */
    }

    .content-container {
        background-color: rgba(255, 255, 255, 0.9); /* Semi-transparent background for readability */
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        margin: 50px auto; /* Centers the container and adds top/bottom spacing */
        max-width: 800px; /* Adjust as needed */
    }

    .button-group {
        display: flex;
        justify-content: space-between;
        gap: 10px; /* Adjusts space between the buttons */
    }

    h1, h4 {
        color: #5a4033; /* Darker color for headings */
    }
</style>

<div class="content-container">
    <h1>Edit</h1>
    <h4>Product</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProductId" />
                <div class="form-group">
                    <label asp-for="ProductName" class="control-label"></label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Category" class="control-label"></label>
                    <select asp-for="Category" class="form-control">
                        <option value="Food">Food</option>
                        <option value="Drink">Drink</option>
                    </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="QuantityInStock" class="control-label"></label>
                    <input asp-for="QuantityInStock" class="form-control" />
                    <span asp-validation-for="QuantityInStock" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group button-group">

                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-info">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
