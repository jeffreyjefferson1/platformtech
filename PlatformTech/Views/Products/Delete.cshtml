@model PlatformTech.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        background-image: url('/images/sar3.jpg'); /* Replace with your image path */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        margin: 0; /* Ensures no default margin around the body */
        padding: 0; /* Removes default padding */
    }

    .content-container {
        background-color: rgba(255, 255, 255, 0.9); /* Semi-transparent background for readability */
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        margin: 50px auto; /* Centers the container and adds top/bottom spacing */
        max-width: 800px; /* Adjust as needed */
    }

    .button-group {
        display: flex;
        justify-content: space-between;
        gap: 10px; /* Adjusts space between the buttons */
        margin-top: 20px; /* Adds top spacing between the form and buttons */
    }
</style>

<div class="content-container">
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Product</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.QuantityInStock)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.QuantityInStock)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ProductId" />
            <div class="button-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-info">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
