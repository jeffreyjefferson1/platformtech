@model IEnumerable<PlatformTech.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TG Sari-Sari Store</title>
    <style>
        body {
            background-image: url('images/sar3.jpg'); /* Replace with your image path */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            margin: 0; /* Ensures no default margin around the body */
            padding: 0; /* Removes default padding */
        }

        .content-container {
            background-color: rgba(255, 255, 255, 0.9); /* Semi-transparent background for the content */
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            color: #333;
            margin: 20px auto; /* Center the content and add margin */
            width: 80%; /* Set a width for the container */
        }

        .table-container {
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #5a4033; /* Darker color for headings */
        }

        a {
            color: #d35400; /* Color for links */
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="content-container">
        <div class="container my-4">
            <div style="text-align: center; margin-bottom: 20px;">
                <h2>@ViewData["Title"]</h2>
            </div>

            <p>
                <a asp-action="Create" class="btn btn-primary">Create New</a>
            </p>

            <div class="table-container">
                <table class="table">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.ProductName)</th>
                            <th>@Html.DisplayNameFor(model => model.Category)</th>
                            <th>@Html.DisplayNameFor(model => model.Price)</th>
                            <th>@Html.DisplayNameFor(model => model.QuantityInStock)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Category)</td>
                                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                                <td>@Html.DisplayFor(modelItem => item.QuantityInStock)</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-secondary">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-info">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
