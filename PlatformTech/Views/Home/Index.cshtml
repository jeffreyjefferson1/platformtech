@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        background-image: url('images/sar3.jpg'); /* Adjust the path to your actual image location */
        background-size: cover; /* Ensures the image covers the entire screen */
        background-position: center; /* Centers the image */
        background-attachment: fixed; /* Keeps the background fixed during scrolling */
        background-repeat: no-repeat; /* Prevents the image from repeating */
    }
    .container2 {
        background-color: rgba(255, 255, 255, 0.8); /* Adds a semi-transparent white overlay */
        border-radius: 15px; /* Rounds the corners of the container */
        padding: 2rem; /* Adds space inside the container */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Adds a subtle shadow for depth */
    }
</style>


<br />
<br />
<div class="container2 py-5">
    <div class="row align-items-center">
        <!-- Text Section (Left side) -->
        <div class="col-md-6 mb-4">
            <h1 class="display-3">Welcome to TG <br />Sari-Sari Store</h1>
            <br />
            <p style="font-size: 1.25rem; text-indent: 30px;">
                The TG Sari-Sari Store Inventory System is a streamlined software solution designed to manage the inventory and sales operations of a traditional sari-sari store. Tailored to the unique needs of small community stores, this system ensures efficient tracking of products and stock levels, simplifying daily store management tasks.
            </p>
        </div>

        <!-- Image Section (Right side) -->
        <div class="col-md-6 text-center">
            <img src="~/images/sari.jpg" class="img-fluid" alt="TG Sari-Sari Store" style="width: 100%; height: auto; max-width: 1200px;">
        </div>
    </div>
</div>
